= form_for @weekly_update do |f|
  - if @weekly_update.errors.any?
    #error_explanation
      %h2= "#{pluralize(@weekly_update.errors.count, "error")} prohibited this weekly_update from being saved:"
      %ul
        - @weekly_update.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :project
    = f.text_field :project
  .field
    = f.label :person
    = f.text_field :person
  .field
    = f.label :weekstart
    = f.date_select :weekstart
  .field
    = f.label :rag
    = f.text_field :rag
  .field
    = f.label :percent
    = f.number_field :percent
  .field
    = f.label :comment
    = f.text_area :comment
  .actions
    = f.submit 'Save'
